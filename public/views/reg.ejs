<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Антибиотики</title>
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
	<link href="https://fonts.googleapis.com/css?family=Didact+Gothic|Noto+Sans|Poiret+One" rel="stylesheet">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="../assets/stylesheets/reg.css">
</head>
<body>
		<div class="loader"><div class="title">Идет загрузка</div><div class="spinner"></div></div>
	<div class="form">
		<h1 class="title">
			Регистрация
		</h1>
		<div class="line"></div>
		<div id="first_block">
			<h3 class="title_test">
				Введите данные
			</h3>

			<form id="form" action="" method="POST">
			<input type="text" id="input_1" name="fio" value="" placeholder="ФИО"></input>
			<input type="text" id="input_2" name="login" value="" placeholder="Логин"></input>
			<input type="password" id="input_3" name="password" value="" placeholder="Пароль"></input>
			<input type="password" id="input_4" value="" placeholder="Повторите пароль"></input>
			<select name="group" id="input_5">
				<%  for (gr of groups) { %>
					<option value="<%= gr.name %>"><%= gr.name %></option>
				<% } if (!groups) {%>Нет групп<% } %>
			</select>
				<div class="error"></div>
			<button  id="form_button">
					Зарегистрироваться
			</button>
		</form>
		</div>
	</div>

	<img src="../assets/imgs/bg.jpg" alt="" id="rignt_image">


	<script>
		document.getElementById('form').onsubmit = event => {
			if (document.getElementById('input_3').value != document.getElementById('input_4').value) {
				document.querySelector('.error').innerText = 'Пароли не совпадают';
				event.preventDefault();
			}
		}
		function ready() {
		document.querySelector('.loader').style.visibility = 'hidden';
	}
	window.addEventListener("load", ready);
	</script>
</body>
</html>
